@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h1>Employee Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department.Deptname
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Model.Role.RoleName
        </dd>
    </dl>
</div>

<h4>Leave Details</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model.leaves)
        {
            <tr>
                <td>@leave.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@leave.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@leave.Reason</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
